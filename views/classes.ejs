<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">


    <title>Document</title>
</head>

<body>
    <div class="container">
        <header class="nav card-panel green lighten-2">
            <button class="btn left hoverable"><a href="/" class='white-text' >Home</a></button>
            <button class="btn right hoverable"><a href="/classes" class='white-text' >Class List</a></button>
            <button class="btn right hoverable"><a href="/contact" class='white-text' >Contact Us</a></button>
        </header>

        <h1>Classes</h1>
        <table class="centered highlight">
            <thead>
                <tr>
                    <th>Details</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                <% classes.forEach(function(classes) { %>
                    <tr>
                        <td>
                            <button class="btn hoverable"><a href="<%= '/classes/' + classes.id %>" class='white-text'>Details</a></button>
                        </td>
                        <td>
                            <%= classes.name %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>